@model LibraryViewModel
@using Humanizer
@{
    ViewData["Title"] = "You are currently borrowing the following books:";
}
<div class="table">
    <div>@ViewData["Title"]</div>
    <table class="table table-hover">
        <thead>
            <tr>
                <td>Book title</td>
                <td>Due date</td>
            </tr>
        </thead>
        @foreach (var item in Model.Books)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.DueDate.Humanize()</td>
            </tr>
        }
    </table>
    <div>
        <a asp-action="BorrowBook">Borrow a new book</a>
    </div>
</div>
