@model UserViewModel
@{
	ViewData["Title"] = "Edit user";
}


<div>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditUserResult">
                <div class="form-group">
                    <input hidden name="Id" class="form-control" placeholder="@Model.Id" value="@Model.Id">
                </div>
                <div class="form-group">
                    <label for="Username" class="control-label">Username</label>
                    <input name="Username" class="form-control" placeholder="@Model.UserName" value="@Model.UserName">
                </div>
                <div class="form-group">
                    <label for="Email" class="control-label">E-mail</label>
                    <input name="Email" class="form-control" placeholder="@Model.Email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label for="PhoneNumber" class="control-label">PhoneNumber</label>
                    <input name="PhoneNumber" class="form-control" placeholder="@Model.PhoneNumber" value="@Model.PhoneNumber">
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
	<div>
		<a asp-action="Index">Back to List</a>
	</div>
</div>